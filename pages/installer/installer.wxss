page{
  height: 100%;
}

.container {
  border: 2rpx black solid;
  height: 30%;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #17f1bb;
  justify-content: center;
  align-items: center;
}

.line {
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 2px;
}

.from {
  border: 1rpx black solid;
  margin-top: 5px;
  flex: auto;
  height:50%;
}

.statusfrom {
  border: 1rpx rgb(206, 226, 215) solid;
  margin-top: 5px;
  flex: auto;
  height:10%;
}

.formtext {
  width: 50%;
  margin-top: 5px;
  text-align: center;
}

.statustext {
  width: 100%;
  margin-top: 5px;
  text-align: center;
}
