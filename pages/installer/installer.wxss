.login-icon{
  flex: none;
}
.login-img{
  width: 750rpx;
}
 
 
.inputView {
  background-color: #fff;
  line-height: 10px;
}
/*输入框*/
.nameImage, .keyImage {
  margin-left: 22px;
  width: 14px;
  height: 14px
}
 
.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px
}
.inputText {
  flex: block;
